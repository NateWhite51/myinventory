<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="form-header">Subscription Info</div>
			<%= form_for @subscription, url: user_customer_subscription_path(@user), 
																 html: { class: "form-horizontal", id: "braintree-form" } do |f| %>
				<div class="form-group">
					<label class="col-md-4 control-label">Plan</label>
					<div class="col-md-6">
				  	<%= f.text_field :plan_id, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-4 control-label">Plan</label>
					<div class="col-md-6">
				  	<%= f.text_field :payment_method_token, class: "form-control", value: @user.payment_methods.first.token %>
					</div>
				</div>
				<%= f.submit "Save", class: "btn btn-sm btn-success pull-right" %>
			<% end %>
		</div>
	</div>
</div>
