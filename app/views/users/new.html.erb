<% provide(:title, "Sign Up") %>

<div class="static-page">
	<div class="container">
	  <div class="row">
	  <div id="contactInfo" class="col-md-4 col-md-offset-1">
        <h2 class='lead'>Start protecting yourself with a personal inventory.</h2>
        <h3 class='lead'>Simple and easy to use. No hidden costs. 100% money-back guarantee.</h3>
        Images<br />
        Comments<br />
        One-click PDF document you can share<br />
        Room by room analysis<br />
        Cloud Based<br />
        Helpful turorials<br />
        And much more!<br />

      </div>
      <div class="col-md-5 col-md-offset-1" id="signup-form">
        <%= form_for(@user) do |f| %>
          <div class="panel panel-default">
	        <div class="panel-heading">Register Now</div>
            <div class="panel-body">
          	  <div class="form-group row">
          		  <div class="col-md-6">
          		    <%= f.text_field :first_name, :class => "form-control", placeholder: "First Name" %>
                </div>
                <div class="col-md-6">
                  <%= f.text_field :last_name, :class => "form-control", placeholder: "Last Name" %>
                </div>
              </div>
              <%= f.fields_for :address do |a| %>
            	  <div class="form-group row">
                  <div class="col-md-12">
            		    <%= a.text_field :street1, :class => "form-control", placeholder: "Address" %>
                  </div>
            		</div>
            	  <div class="form-group row">
                  <div class="col-md-4">
            		    <%= a.text_field :city, :class => "form-control", placeholder: "City" %>
                  </div>
                  <div class="col-md-4">
            		    <%= a.select :state, states, {}, { class: "form-control" } %>
                  </div>
                  <div class="col-md-4">
            		    <%= a.text_field :zip, class: "form-control" %>
                  </div>
            		</div>
              <% end %>
          	  <div class="form-group row">
                <div class="col-md-6">
          		    <%= f.phone_field :phone_number, :class => "form-control", placeholder: "Phone Number" %>
                </div>
                <div class="col-md-6">
                  <%= f.email_field :email, :class => "form-control", placeholder: "Email" %>
                </div> 
          		</div>
          		<div class="form-group row">  
          			<div class="col-md-6">
          	  	  <%= f.password_field :password, :class => "form-control", placeholder: "Password" %>
                </div>
          	  	<div class="col-md-6">
          	  	  <%= f.password_field :password_confirmation, :class => "form-control", placeholder: "Confirmation" %>
                </div>
          		</div>
              <div class="form-group row">
                <div class="col-md-8">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" id="accept"> Accept 
                      <%= link_to "Terms & Conditions", "#", data: { toggle: 'modal', target: '#myModal'} %>
                    </label>
                  </div>
                </div>
                <div class="col-md-4"><%= f.submit "Register", :class => "btn btn-primary pull-right" %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <%= render template: 'static_pages/toc' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-small" data-dismiss="modal">Accept</button>
      </div>
    </div>
  </div>
</div>
