<% provide(:title, "Inspections") %>
<div class="row">
	<div class="col-md-4 pull-left form-header">My Inspections</div>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
			<th>Address</th>
      <th>Unit</th>
      <th>Tenant</th>
      <th>Type</th>
      <th>Inspected by</th>
      <th>Inspection date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
				<td><%= inspection.address %></td>
        <td><%= inspection.unit %></td>
        <td><%= inspection.tenant %></td>
        <td><%= inspection.inspection_type %></td>
        <td><%= inspection.inspected_by %></td>
        <td><%= inspection.inspection_date %></td>
				<td class="text-right">
					<%= link_to 'Show', inspection, :class => "btn btn-success btn-xs" %>
					<%= link_to 'Delete', inspection, method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger btn-xs" %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
