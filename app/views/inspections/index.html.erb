<% provide(:title, "Inspections") %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Inspection type</th>
      <th>Unit</th>
      <th>Tenant</th>
      <th>Inspected by</th>
      <th>Inspection date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.inspection_type %></td>
        <td><%= inspection.unit %></td>
        <td><%= inspection.tenant %></td>
        <td><%= inspection.inspected_by %></td>
        <td><%= inspection.inspection_date %></td>
        <td><%= link_to 'Show', inspection %></td>
        <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
        <td><%= link_to 'Destroy', inspection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inspection', new_inspection_path %>
